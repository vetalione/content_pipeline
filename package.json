{
  "name": "content-pipeline",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:api": "npm run dev --workspace=packages/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=packages/shared && npm run build --workspace=packages/web",
    "build:api": "npm run build --workspace=packages/api",
    "db:migrate": "npm run db:migrate --workspace=packages/api",
    "db:studio": "npm run db:studio --workspace=packages/api",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
